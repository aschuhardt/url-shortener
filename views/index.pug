doctype html
html
  head
    title= title
  body
    label(for='url') URL:
    input(id='input-url', type='url', placeholder='enter address')
    button(id='button-submit') Submit
    label(id='label-output')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
      script(type='text/javascript').
        $(document).ready(function() {
          $('#button-submit').click(function() {
            $.ajax({
              url: "/submit",
              data: {
                "url": $('#input-url').val();
              },
              cache: false,
              type: 'POST',
              success: function(res) {
                $('#label-output').text(res);
              },
              error: function(err) {
                $('#label-output').text(res);
              }
            });
          });
        });
